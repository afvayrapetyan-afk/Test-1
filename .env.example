# =============================================================================
# AI Business Portfolio Manager - Environment Configuration
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true

# -----------------------------------------------------------------------------
# Databases
# -----------------------------------------------------------------------------

# PostgreSQL
DATABASE_URL=postgresql://admin:admin123@localhost:5432/business_portfolio

# Redis (Cache + Message Broker)
REDIS_URL=redis://:redis123@localhost:6379/0

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333

# -----------------------------------------------------------------------------
# AI APIs
# -----------------------------------------------------------------------------

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic (Fallback)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# -----------------------------------------------------------------------------
# Data Sources
# -----------------------------------------------------------------------------

# Reddit (PRAW - Python Reddit API Wrapper)
# Get credentials: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-secret
REDDIT_USER_AGENT=BusinessPortfolioBot/1.0
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password

# Google Trends (no API key needed)

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_API_ID=your-telegram-api-id
TELEGRAM_API_HASH=your-telegram-api-hash

# VK (ВКонтакте)
VK_ACCESS_TOKEN=your-vk-access-token

# TGStat (Russian Telegram analytics - paid service)
TGSTAT_API_TOKEN=your-tgstat-token

# Yandex Wordstat
YANDEX_WORDSTAT_USER=your-yandex-user
YANDEX_WORDSTAT_TOKEN=your-yandex-token

# YouTube Data API
YOUTUBE_API_KEY=your-youtube-api-key

# -----------------------------------------------------------------------------
# GitHub Integration (Optional)
# -----------------------------------------------------------------------------

GITHUB_TOKEN=ghp_your_token_here
GITHUB_REPO=username/ai-business-portfolio

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------

SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# -----------------------------------------------------------------------------
# Celery Configuration
# -----------------------------------------------------------------------------

CELERY_BROKER_URL=redis://:redis123@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:redis123@localhost:6379/1

# Flower (Celery Monitoring UI)
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:flower123

# -----------------------------------------------------------------------------
# Backend API
# -----------------------------------------------------------------------------

API_HOST=0.0.0.0
API_PORT=8000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# -----------------------------------------------------------------------------
# Monitoring & Logging
# -----------------------------------------------------------------------------

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Log Level
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable Kafka streaming (optional - for advanced setup)
ENABLE_KAFKA=false

# Enable Temporal workflows (optional - for advanced setup)
ENABLE_TEMPORAL=false

# Enable batch processing
ENABLE_BATCH_EMBEDDINGS=true

# Enable prompt caching
ENABLE_PROMPT_CACHING=true
